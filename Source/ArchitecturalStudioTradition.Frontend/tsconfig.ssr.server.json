{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app-server",
    "module": "commonjs",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.d.ts"
  ],
  "files": [
    "ssr.server.ts",
    "src/main.ssr.server.ts"
  ],
  "exclude": [
    "src/test.ts",
    "src/**/*.spec.ts",
    "src/selfhost/*",
    "src/main.selfhost.*",
  ],
  "angularCompilerOptions": {
    "preserveWhitespaces": true,
    "entryModule": "./src/ssr/ssr.server.module#SsrServerModule"
  }
}
